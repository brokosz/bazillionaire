set -e


error() {
	printf "ERROR: %s\n" "$@"
	exit 1
}

PKG=bazillionaire
DIR="./$PKG" || DIR="/usr/local/share/$PKG"
LETTERS=99

while [ ! -z "$1" ]; do
	case "${1}" in
		-h|--help)
			exec man $PKG
		;;
		-d|--dir)
			DIR="$2"
			shift 2
		;;
		-u|--ubuntu)
			UBUNTU=$(cat $DIR/*.txt | shuf -n 1 | head -c 1)
			shift
		;;
		*)
			error "Unknown options [$1]"
		;;
	esac
done

[ $LETTERS -lt 3 ] && LETTERS=3

DIR="$DIR"

Companies() {
	shuf -n 1 $DIR/companies.txt
}

Animals() {
	shuf -n 1 $DIR/animals.txt
}

Generate() {

		comp="$(Companies)"
		anim="$(Animals)"
		printf "It's like %s for %s\n" "$comp" "$anim"
		return
}

Generate
